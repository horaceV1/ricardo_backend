/**
 * Create the dynamic_form_submission table if it doesn't exist.
 */
function formulario_candidatura_dinamico_update_9002() {
  $schema = \Drupal::database()->schema();
  
  // Check if table already exists
  if ($schema->tableExists('dynamic_form_submission')) {
    return t('Table dynamic_form_submission already exists.');
  }
  
  // Get the schema definition
  $table_schema = formulario_candidatura_dinamico_schema()['dynamic_form_submission'];
  
  // Create the table
  $schema->createTable('dynamic_form_submission', $table_schema);
  
  return t('Created dynamic_form_submission table.');
}

/**
 * Add field_approvals column for per-field approval data.
 */
function formulario_candidatura_dinamico_update_9003() {
  $schema = \Drupal::database()->schema();

  // Add the blob column for serialized map data.
  if (!$schema->fieldExists('dynamic_form_submission', 'field_approvals__value')) {
    $schema->addField('dynamic_form_submission', 'field_approvals__value', [
      'type' => 'blob',
      'size' => 'big',
      'not null' => FALSE,
      'description' => 'Per-field approval data (serialized map).',
    ]);
  }

  // Clear caches so Drupal picks up the new field definition.
  drupal_flush_all_caches();

  return t('Added field_approvals column for per-field approval data.');
}
